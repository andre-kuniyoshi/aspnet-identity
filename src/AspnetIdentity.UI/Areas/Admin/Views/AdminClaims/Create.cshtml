
<h1 class="bg-info text-white">Criar Nova Claim</h1>

<a asp-action="Index" class="btn btn-outline-dark">Return</a>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label for="ClaimType">Type of Claim:</label>
        <input name="ClaimType" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ClaimValue">Value of Claim:</label>
        <input name="ClaimValue" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create Claim</button>
</form>